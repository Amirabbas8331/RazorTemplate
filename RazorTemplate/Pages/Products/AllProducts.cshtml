@page "{name?}"
@model AllProductsModel
@{
    ViewData["Title"] = "AllProducts";
}
<h1>@ViewData["Title"]</h1>
<div class="row g-4">
    @if (Model.Products != null && Model.Products.Any())
    {
        foreach (var item in Model.Products)
        {
            <div class="col-sm-6 col-lg-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text mb-1"><strong>ID:</strong> @item.Id</p>
                        <p class="card-text mb-1"><strong>Price:</strong> <span class="text-success">@item.Price.ToString("C")</span></p>
                        <p class="card-text"><strong>Category:</strong> @item.category.Name (@item.category.Id)</p>
                    </div>
                    <div class="card-footer bg-transparent border-0">
                        <button class="btn btn-danger w-100">
                            <i class="bi bi-eye"></i> View Details
                        </button>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-warning text-center">
                No products found.
            </div>
        </div>
    }
</div>
